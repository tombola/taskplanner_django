# Todoist API Configuration
# Get your API token from https://todoist.com/app/settings/integrations/developer
TODOIST_API_TOKEN=your_todoist_api_token_here
TODOIST_WEBHOOK_SECRET=your_secret_here

# Todoist App Credentials (for webhook management commands)
# Create a Todoist app at https://developer.todoist.com/appconsole.html
TODOIST_CLIENT_ID=your_client_id_here
TODOIST_CLIENT_SECRET=your_client_secret_here

# Task Creation Dry Run Mode
# When True, task creation will log planned actions instead of posting to Todoist API
# Useful for testing task templates without creating actual tasks
DRY_RUN_TASK_CREATION=False

# Google OAuth (django-allauth)
# Set up credentials at https://console.cloud.google.com/apis/credentials
GOOGLE_AUTH_CLIENT_ID=your_google_client_id_here
GOOGLE_AUTH_CLIENT_SECRET=your_google_client_secret_here

# Django Settings
# SECURITY WARNING: keep the secret key used in production secret!
# Generate a new secret key for production: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
# SECRET_KEY=your_secret_key_here

# Debug mode (set to False in production)
# DEBUG=True

# Reverse Proxy Configuration
# If deploying behind a reverse proxy at a subpath (e.g., /tasks/), set this to the subpath
# For production at http://allotmentplotter.uk/tasks/, set to '/tasks'
# For local development, leave commented out or set to empty
# FORCE_SCRIPT_NAME=/tasks

# Wagtail Admin Base URL
# Set this to the full base URL where the site will be accessed
# For production: http://allotmentplotter.uk/tasks
# For local development: http://localhost:8000
# WAGTAILADMIN_BASE_URL=http://allotmentplotter.uk/tasks
